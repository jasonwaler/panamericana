<h1>Panamericana</h1>

<% if !current_user %>
<%= link_to 'Sign in', new_user_session_path %>
<% end %>

<div class='tweets'>
    <% @tweets.each do |tweet| %>
      <div class='tweet'>
        <p><%= tweet.body %></p>
        <p><%= tweet.user.email %></p>
        <p><%= distance_of_time_in_words Time.now, tweet.created_at %> ago</p> 
      </div>
    <% end %>
</div>